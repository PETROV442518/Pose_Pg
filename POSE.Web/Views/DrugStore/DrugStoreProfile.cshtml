@{
    ViewData["Title"] = "Drug Store Profile";
}
@model PROJECT_POSE.Models.Account.DrugStoreProfileViewModel
@using Microsoft.AspNetCore.Identity
@using POSE.Domain

@inject UserManager<PoseUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


    <section id="banner" class="banner">
        <div class="bg-color">
            <div class="container">
                <div style="margin-top:100px">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="profile-img">
                                    <img src="~/img/apothecary-159036_960_720.png" ; style="height:200px; width:200px" />
                                </div>
                            </div>
                            <!--header-->
                            <div class="col-md-8">
                                <div>
                                    <h3 style="color:white">
                                        Hello, @User.Identity.Name!
                                    </h3>
                                    <p class="text-white">@Model.Address<span class="white"></span></p>
                                </div>
                                <div class="col-md-10 text-white">
                                    <div class="col-md-6 btn-appoint text-center">
                                        <a asp-controller="Receipt" asp-action="Create"  style="margin-left:20px; color:white; margin-right:20px">FULFILL A PRESCRIPTION</a>
                                    </div>
                                    <div class="col-md-6 btn-appoint text-center">
                                        <a asp-controller="DrugStore" asp-action="Receipts" style="margin-left:20px; margin-right:20px; color:white">RECEIPTS</a>
                                    </div>
                                </div>
                            </div>
                            <!--/header-->
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <!--rightmenu-->
                                <div class="col-md-4">
                                    <div class="alert-heading">
                                        <h3 style="color:coral; margin-top:20px">PROFILE:</h3>
                                        <a class="white" href="/Identity/Account/Manage/ChangePassword">Change Password</a><br />
                                        <a class="white" href="/Identity/Account/Manage/DeletePersonalData">Delete Profile</a><br />
                                        <a class="white" asp-area="Identity" asp-page="/Account/Manage/UpdateDrugStoreProfile">Update Profile</a>
                                    </div>
                                </div>
                                <!--/rightmenu-->
                                <div class="col-md-8">
                                    <div class="row white">
                                        <h3 style="color:coral; margin-top:20px">PERSONAL INFO:</h3>
                                        <hr style="height:3px; background:#ffb737; position:relative;border:0; margin:20px 0 20px 0" />
                                        <div class="col-md-4">
                                            <label>Full name</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.FullName</p>
                                        </div>
                                    </div>
                                    <div class="row white">
                                        <div class="col-md-4">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="row white">
                                        <div class="col-md-4">
                                            <label>Phone</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.PhoneNumber</p>
                                        </div>
                                    </div>
                                    <div class="row white">
                                        <div class="col-md-4">
                                            <label>Receipts for today</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>@Model.PrescriptionsForToday</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

