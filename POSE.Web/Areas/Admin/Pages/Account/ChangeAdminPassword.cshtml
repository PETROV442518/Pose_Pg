@page
@model  PROJECT_POSE.Areas.Admin.Pages.Account.ChangeAdminPasswordModel
@{
    ViewData["Title"] = "Change password";
}


<<section id="banner" class="banner">
    <div class="bg-color">
        <div class="container">
            <div class="col-md-12">
                <div class="banner-text">
                    <section style="color:white; margin-top:150px">
                        <h4 class="white">@ViewData["Title"]</h4>
                        <div class="row">
                            <div class="col-md-4">
                                <hr style="height:3px; background:#ffb737; position:relative;border:0; margin:20px 0 20px 0" />
                                <form id="change-password-form" method="post">
                                    <div asp-validation-summary="All" class="text-white"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.OldPassword"></label>
                                        <input asp-for="Input.OldPassword" class="form-control" />
                                        <span asp-validation-for="Input.OldPassword" class="text-white"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.NewPassword"></label>
                                        <input asp-for="Input.NewPassword" class="form-control" />
                                        <span asp-validation-for="Input.NewPassword" class="text-white"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-white"></span>
                                    </div>
                                    <button type="submit" class="btn btn-default">Update password</button>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
