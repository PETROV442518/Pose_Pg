@page
@model RegisterPatientModel
@{
    ViewData["Title"] = "Register Form";

}
<section id="banner" class="banner">
    <div class="bg-color">
        <div class="container">
            <div class="col-md-10">
                <div class="banner-text">
                    <section style="color:white; margin-top:100px">
                        <h2 style="color:white">@ViewData["Title"]</h2>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h4 style="color:white">Create a new account.</h4>
                            <div asp-validation-summary="All" class="text-white"></div>
                            <div class="col-md-4">
                                <hr style="height:3px; background:#ffb737; position:relative;border:0; margin:20px 0 20px 0" />
                                <div class="form-group">
                                    <label asp-for="Input.UserName"></label>
                                    <input asp-for="Input.UserName" class="form-control" />
                                    <span asp-validation-for="Input.UserName" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.FullName">Full Name</label>
                                    <input asp-for="Input.FullName" class="form-control" />
                                    <span asp-validation-for="Input.FullName" class="text-white"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <hr style="height:3px; background:#ffb737; position:relative;border:0; margin:20px 0 20px 0" />
                                <div class="form-group">
                                    <label asp-for="Input.Age"></label>
                                    <input asp-for="Input.Age" class="form-control" />
                                    <span asp-validation-for="Input.Age" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Address"></label>
                                    <input asp-for="Input.Address" class="form-control" />
                                    <span asp-validation-for="Input.Address" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.PIN">Personal Identificational Number</label>
                                    <input asp-for="Input.PIN" class="form-control" />
                                    <span asp-validation-for="Input.PIN" class="text-white"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-white"></span>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-default text-center">Register</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
