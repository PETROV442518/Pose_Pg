@page

@{
    ViewData["Title"] = "Delete drug";
}

@model DeleteDrugModel

<section id="banner" class="banner">
    <div class="bg-color">
        <div class="container">
            <div class="col-md-12">
                <div class="banner-text">
                    <section style="color:white; margin-top:100px">
                        <h2 style="color:white">Delete form</h2>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-white"></div>
                            <div class="col-md-4">
                                <hr style="height:3px; background:#ffb737; position:relative;border:0; margin:20px 0 20px 0" />
                                <div class="form-group">
                                    <label asp-for=Input.DrugName>Drugs</label>
                                    <select class="form-control" id="DrugName" name="DrugName">
                                        <option selected disabled>-- Choose drug --</option>
                                        @foreach (string option in ViewData["DrugNames"] as List<string>)
                                            {
                                        <option>@option</option>
                                            }
                                    </select>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-default text-center">Delete</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
